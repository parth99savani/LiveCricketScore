<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PointTableActivity"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:layout_height="?actionBarSize">

        <ImageButton
            android:id="@+id/btnBack"
            android:src="@drawable/ic_back"
            android:background="@android:color/transparent"
            android:layout_width="?actionBarSize"
            android:layout_height="?actionBarSize"/>

        <TextView
            android:text="Point Table"
            android:textSize="20sp"
            android:fontFamily="@font/circularstd_medium"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="?actionBarSize"/>

    </LinearLayout>

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/spinnerSeriesType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ms_background_color="@color/backgroundGray"
        app:ms_text_color="@android:color/black"
        android:layout_marginTop="10dp"/>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textviewTeamName"
            android:text="Teams"
            android:textColor="@android:color/white"
            android:fontFamily="@font/circular_std_bold"
            android:singleLine="true"
            android:padding="3dp"
            android:layout_marginVertical="8dp"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:layout_toLeftOf="@+id/linearScoreBowlerItem" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearScoreBowlerItem"
            android:layout_alignParentRight="true">

            <TextView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:id="@+id/textviewPoint"
                android:gravity="end"
                android:textColor="@android:color/white"
                android:text="P"
                android:padding="3dp"
                android:fontFamily="@font/circular_std_bold"
                android:layout_marginVertical="8dp"
                android:layout_marginHorizontal="2dp"
                android:textSize="14sp"
                />

            <TextView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:id="@+id/textviewWin"
                android:gravity="end"
                android:text="W"
                android:textColor="@android:color/white"
                android:padding="3dp"
                android:fontFamily="@font/circular_std_bold"
                android:layout_marginVertical="8dp"
                android:layout_marginHorizontal="2dp"
                android:textSize="14sp"
                />

            <TextView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:id="@+id/textviewLoss"
                android:gravity="end"
                android:textColor="@android:color/white"
                android:text="L"
                android:padding="3dp"
                android:fontFamily="@font/circular_std_bold"
                android:layout_marginVertical="8dp"
                android:layout_marginHorizontal="2dp"
                android:textSize="14sp"
                />

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/textviewNotResult"
                android:gravity="end"
                android:textColor="@android:color/white"
                android:text="NR"
                android:padding="3dp"
                android:fontFamily="@font/circular_std_bold"
                android:layout_marginVertical="8dp"
                android:layout_marginHorizontal="2dp"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/textviewPoints"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_marginVertical="8dp"
                android:fontFamily="@font/circular_std_bold"
                android:gravity="end"
                android:padding="3dp"
                android:text="Pts"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:id="@+id/textviewNetRunRet"
                android:gravity="end"
                android:textColor="@android:color/white"
                android:text="NRR"
                android:padding="3dp"
                android:fontFamily="@font/circular_std_bold"
                android:layout_marginVertical="8dp"
                android:layout_marginHorizontal="2dp"
                android:textSize="14sp" />

        </LinearLayout>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclePointTable"
        android:background="@android:color/white" />

</LinearLayout>