<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textviewTeamName"
        android:text=""
        android:textColor="@android:color/black"
        android:singleLine="true"
        android:padding="3dp"
        android:layout_marginVertical="8dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="10dp"
        android:textSize="14sp"
        android:layout_toLeftOf="@+id/linearScoreBowlerItem" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearScoreBowlerItem"
        android:layout_alignParentRight="true">

        <TextView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:id="@+id/textviewPlay"
            android:gravity="end"
            android:textColor="@color/colorTextGray"
            android:text=""
            android:padding="3dp"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="2dp"
            android:textSize="14sp" />

        <TextView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:id="@+id/textviewWin"
            android:gravity="end"
            android:text=""
            android:textColor="@color/colorTextGray"
            android:padding="3dp"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="2dp"
            android:textSize="14sp" />

        <TextView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:id="@+id/textviewLoss"
            android:gravity="end"
            android:textColor="@color/colorTextGray"
            android:text=""
            android:padding="3dp"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="2dp"
            android:textSize="14sp" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:id="@+id/textviewNoResult"
            android:gravity="end"
            android:textColor="@color/colorTextGray"
            android:text=""
            android:padding="3dp"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="2dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textviewPoints"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_marginVertical="8dp"
            android:gravity="end"
            android:padding="3dp"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:id="@+id/textviewNetRunRet"
            android:gravity="end"
            android:textColor="@color/colorTextGray"
            android:text=""
            android:padding="3dp"
            android:layout_marginVertical="8dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="5dp"
            android:textSize="14sp" />

    </LinearLayout>

</RelativeLayout>
