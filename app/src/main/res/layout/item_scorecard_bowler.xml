<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textviewBowlerItem"
        android:text="Bumrah"
        android:textColor="@android:color/black"
        android:fontFamily="@font/circularstd_medium"
        android:singleLine="true"
        android:padding="3dp"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="2dp"
        android:textSize="@dimen/textSize14"
        android:layout_toLeftOf="@+id/linearScoreBowlerItem"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearScoreBowlerItem"
        android:layout_alignParentRight="true">

        <TextView
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:id="@+id/textviewOverItem"
            android:gravity="end"
            android:textColor="@color/colorTextGray"
            android:text="5.0"
            android:padding="3dp"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="2dp"
            android:textSize="@dimen/textSize14"
            />

        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:id="@+id/textviewMaidenItem"
            android:gravity="end"
            android:text="3"
            android:textColor="@color/colorTextGray"
            android:padding="3dp"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="2dp"
            android:textSize="@dimen/textSize14"
            />

        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:id="@+id/textviewRunBowlerItem"
            android:gravity="end"
            android:textColor="@color/colorTextGray"
            android:text="15"
            android:padding="3dp"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="2dp"
            android:textSize="@dimen/textSize14"
            />

        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:id="@+id/textviewWicketItem"
            android:gravity="end"
            android:textColor="@android:color/black"
            android:text="5"
            android:padding="3dp"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="2dp"
            android:textSize="@dimen/textSize14"
            />

        <TextView
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:id="@+id/textviewEconomyRateItem"
            android:gravity="end"
            android:textColor="@color/colorTextGray"
            android:text="1.4"
            android:padding="3dp"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="2dp"
            android:textSize="@dimen/textSize14"
            />

    </LinearLayout>
</RelativeLayout>